---
import { formatDate } from "../utils";
import { urlFor } from "../utils/image";
import type { Post } from "../utils/sanity";
import { Icon } from 'astro-icon/components'


interface Props {
  post: Post;
}

const { post } = Astro.props;
---

<div class="card">
  <a href={`/resource/${post.slug.current}`} class="card__link">
    {post.imageSrc && (
      <img
        class="card__cover"
        src={urlFor(post.imageSrc).width(500).height(300).url()}
        alt="Cover image"
      />
    )}
    <div class="card__container">
      <h3 class="card__title">{post.title}</h3>
      <div class="tags">
        {post.tags?.map((tag: string) => (
          <span class="tag" data-key={tag}>{tag}</span>
        ))}
        
      </div>
      <p class="card__excerpt">{post.description}</p>
      
    </div>
  </a>
  <div class="details-container">
    <div class="file-details">
      <div class="file-detail-item">
        <span class="file-detail-label">Date Modified: </span>
        <span class="file-detail-value">{formatDate(post._createdAt)}</span>
      </div>
      <div class="file-detail-item">
        <span class="file-detail-label">Author: </span>
        <span class="file-detail-value">{post.author}</span>
      </div>
      <div class="file-detail-item">
        <span class="file-detail-label">File Type: </span>
        <span class="file-detail-value">{post.resourceType}</span>
      </div>
    </div>
    {post.BMSResourceLink && (
      <a href={post.BMSResourceLink} class="download-button" target="_blank" rel="noopener noreferrer">
        <Icon size={30} name="mdi:file-download" />
      </a>
    )}
  </div>
</div>


<style>
  
  .details-container {
    border-top: 1px dotted var(--theme-dim);
    padding: .5em 0 0 0;
    margin-top: auto;
    display: flex;
    align-items: center;
    gap: .5em;
  }
  .file-details {
    font-size: var(--font-size-1);
    & .file-detail-label {
      font-weight: 600;
    }
    & .file-detail-value {
      white-space: nowrap;
    }
  }
  .card {
    box-sizing: border-box;
    
      
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid var(--theme-dim-lighter);
    background-color: var(--theme-dim-lightest);
    transition: all 100ms ease-in;
    animation: fadeInUp .3s ease-in;
    display: flex;
    flex-direction: column;
    padding: var(--space-4);
    /* padding: 9px; */
    position: relative;
    border-bottom: 1px solid var(--theme-dim);

    & .card__container {
      /* margin: 0 var(--space-1) 0; */
    }

    & .card__cover {
      width: 100%;
      height: 231px;
      object-fit: cover;
    }

    & .card__cover--none {
      width: 100%;
      height: 231px;
      background: var(--black);
    }

    & .card__title {
      font-family: var(--font-family-sans);
      font-weight: 800;
      font-size: var(--font-size-5);
      line-height: var(--line-height-6);
      letter-spacing: -0.025em;
      color: var(--text-color);
      margin: var(--space-3) 0;
    }

    & .card__excerpt {
      font-family: var(--font-family-sans);
      font-weight: 400;
      font-size: var(--font-size-3);
      line-height: var(--line-height-3);
      margin-top: 0;
    }

    & .tags {
      font-size: .75rem;
      margin: .5rem 0;
    }

    & .tag {
      /* styles for individual tags */
      text-transform: uppercase;
      color: var(--white);
      display: inline-block;
      padding: 2px 10px;
      border-radius: 12px;
      background-color: var(--theme-dim);
      margin: 0 .5rem .5rem 0;
    }

    & .card__date {
      font-weight: 400;
      font-family: var(--font-family-sans);
      font-size: var(--font-size-1);
      margin-top: calc(var(----space-4) + 7);
      & div {
        
        font-weight: 600;
      }
    }

    & .card__link {
      color: var(--text-color);
      text-decoration: none;

      &:hover {
        opacity: 0.8;
        transition: 0.2s;
      }

      &::before {
        /* content: "";
        position: absolute;
        inset: 0; */
      }
    }

    /* &:first-child {
      border-top-left-radius: 3px;
      border-top-right-radius: 3px;
    }

    &:last-child {
      border-bottom-left-radius: 3px;
      border-bottom-right-radius: 3px;
    } */
  }

  @media (min-width: 575px) {
    .card {
      border: 1px solid var(--theme-dim);
      /* border-bottom: none; */

      & .card__title {
        margin-top: var(--space-4);
      }

      &:last-child {
        border-bottom: 1px solid var(--theme-dim);
      }
    }
  }

  @media (min-width: 800px) {
    .card {
      flex-direction: column;

      & .card__container {
        /* margin: 0 var(--space-4) 0; */
      }

      & .card__cover,
      & .card__cover--none {
       /*  min-width: 366.5px;
        max-width: 366.5px;
        max-height: 231px; */
      }
    }
  }
</style>
